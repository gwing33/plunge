{
  "name": "plunge",
  "version": "3.0.0",
  "description": "Functional Reactive Data Store",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && babel src --out-dir lib",
    "test": "jest",
    "watch:test": "jest --watch -o",
    "watch:build": "node_modules/.bin/nodemon -"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gwing33/plunge.git"
  },
  "keywords": [
    "rx",
    "immutable",
    "functional",
    "reactive"
  ],
  "author": "Gerald Leenerts",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gwing33/plunge/issues"
  },
  "homepage": "https://github.com/gwing33/plunge#readme",
  "babel": {
    "presets": [
      "latest",
      "react"
    ]
  },
  "jest": {
    "rootDir": "./src",
    "collectCoverage": true,
    "verbose": true
  },
  "dependencies": {
    "immutable": "^3.8.1",
    "lodash": "^4.17.4",
    "react": "^15.4.2",
    "rxjs": "^5.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-jest": "^18.0.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "jest-cli": "^18.1.0",
    "nodemon": "^1.11.0"
  }
